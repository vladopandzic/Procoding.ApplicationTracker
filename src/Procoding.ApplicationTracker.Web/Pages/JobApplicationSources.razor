@page "/job-application-sources"
@using MudBlazor
<MudDataGrid Items="@ViewModel.JobApplicationSources" Hover=true RowsPerPage="10"  Pag>
    
    <Columns>
        <PropertyColumn Property="x => x.Name" Title="Name" Resizable="true" />
        <TemplateColumn CellClass="d-flex justify-end">
            <CellTemplate>
                <MudStack Row>
                    <MudButton Size="@Size.Small" Variant="@Variant.Filled" Color="@Color.Primary">Hire</MudButton>
                </MudStack>
            </CellTemplate>
        </TemplateColumn>
    </Columns>
    <PagerContent>
        <MudDataGridPager T="DTOs.Model.JobApplicationSourceDTO" />
    </PagerContent>
</MudDataGrid>

