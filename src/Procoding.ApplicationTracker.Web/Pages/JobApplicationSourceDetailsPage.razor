@page "/job-application-sources/{Id}"
@using MudBlazor
@using Microsoft.AspNetCore.Components.Web;
@using FluentValidation.Validators;
@using Blazored.FluentValidation
<PageTitle>@ViewModel.JobApplicationSource?.Name</PageTitle>

@if (ViewModel.IsLoading)
{
    <MudProgressCircular Color="Color.Primary" Indeterminate="true" />

}else if (ViewModel.JobApplicationSource is not null)
{
    <MudContainer MaxWidth="MaxWidth.Medium" Style="margin-top: 20px;">
        <MudCard>
            <MudCardHeader>
                <MudText Typo="Typo.h4">@ViewModel.JobApplicationSource.Name</MudText>
            </MudCardHeader>
            <MudCardContent>
                <MudForm @ref=mudForm Model="ViewModel.JobApplicationSource" ValidationDelay="0" Validation="ViewModel.Validator.ValidateValue">

                    <MudTextField @bind-Value=ViewModel.JobApplicationSource.Name T="string" Label="Name"  Validation="ViewModel.Validator.ValidateValue" Immediate="true" For="(()=>ViewModel.JobApplicationSource.Name)"   />
            
                    <br />
                    <MudButton OnClick="()=>OnSubmit()" Color="Color.Primary" Size="Size.Large" StartIcon="@Icons.Material.Rounded.Save">Save</MudButton>
                </MudForm>
            </MudCardContent>
        </MudCard>

    </MudContainer>
}
