@using MudBlazor
@using MudBlazor.Extensions

<MudButton Disabled="Disabled" ButtonType="ButtonType.Button" OnClick="OnClick" Color="Color.Primary" Size="Size.Large" StartIcon="@Icons.Material.Rounded.Save">
    Save
    @if (IsSaving)
    {
        <MudProgressCircular Class="ml-2" Indeterminate="true" Size="Size.Small"></MudProgressCircular>
    }
</MudButton>

@code {
    [Parameter] public bool Disabled { get; set; }
    [Parameter] public bool IsSaving { get; set; }
    [Parameter] public EventCallback OnClick { get; set; }
}