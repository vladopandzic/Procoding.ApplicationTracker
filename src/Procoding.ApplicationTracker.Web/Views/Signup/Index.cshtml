@model Procoding.ApplicationTracker.DTOs.Request.Candidates.CandidateSignupRequestDTO
@using Procoding.ApplicationTracker.Web.Pages.Auth
@{
    ViewBag.Title = "Candidate Signup";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" rel="stylesheet" />
<style>
    /* Custom CSS to keep labels at the top */
    .input-field label {
        transform: translateY(-14px) scale(0.8);
        transform-origin: left top 0px;
        color: #9e9e9e; /* MaterializeCSS default grey text color */
    }

    .input-field input:focus + label,
    .input-field input:valid + label {
        color: #9e9e9e; /* MaterializeCSS default grey text color */
    }
</style>

@using (Html.BeginForm("Signup", "Signup", FormMethod.Post))
{
    <div class="container">
        <div class="row">
            <div class="col s12 m6 offset-m3">
                <div class="card">
                    <div class="card-content">
                        <span class="card-title">Candidate Signup</span>

                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "red-text" })

                        @if (ViewBag.Message != null)
                        {
                            <p class="red-text">@ViewBag.Message</p>
                        }

                        <div class="row">
                            <div class="input-field col s12">
                                @Html.TextBoxFor(a => a.Name, new { @class = "validate" })
                                @Html.LabelFor(a => a.Name, "First Name")
                                @Html.ValidationMessageFor(a => a.Name, "", new { @class = "red-text" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                @Html.TextBoxFor(a => a.Surname, new { @class = "validate" })
                                @Html.LabelFor(a => a.Surname, "Last Name")
                                @Html.ValidationMessageFor(a => a.Surname, "", new { @class = "red-text" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                @Html.TextBoxFor(a => a.Email, new { @class = "validate" })
                                @Html.LabelFor(a => a.Email, "Email")
                                @Html.ValidationMessageFor(a => a.Email, "", new { @class = "red-text" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                @Html.PasswordFor(a => a.Password, new { @class = "validate" })
                                @Html.LabelFor(a => a.Password, "Password")
                                @Html.ValidationMessageFor(a => a.Password, "", new { @class = "red-text" })
                            </div>
                        </div>
                    </div>
                    <div class="card-action">
                        <button type="submit" class="btn deep-purple waves-effect waves-light">Signup</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>